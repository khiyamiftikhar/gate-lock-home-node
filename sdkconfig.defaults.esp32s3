# ===== Flash =====
CONFIG_ESPTOOLPY_FLASHSIZE_16MB=y

# ===== Logging =====
CONFIG_LOG_DEFAULT_LEVEL_INFO=y

# ===== System / FreeRTOS =====
CONFIG_ESP_SYSTEM_EVENT_TASK_STACK_SIZE=8192
CONFIG_FREERTOS_CHECK_STACKOVERFLOW_CANARY=y

# ===== Bootloader / OTA =====
#CONFIG_BOOTLOADER_APP_ROLLBACK_ENABLE=y
#CONFIG_APP_ROLLBACK_ENABLE=y
#CONFIG_BOOTLOADER_WDT_ENABLE=y

# ===== PSRAM (Octal, 8MB) =====
CONFIG_ESP32S3_SPIRAM_SUPPORT=y
CONFIG_SPIRAM=y
CONFIG_SPIRAM_MODE_OCT=y
CONFIG_SPIRAM_SPEED_80M=y
CONFIG_SPIRAM_USE_MALLOC=y
CONFIG_SPIRAM_MALLOC_ALWAYSINTERNAL=16384
CONFIG_SPIRAM_TRY_ALLOCATE_WIFI_LWIP=y

# ===== TLS / mbedTLS =====
#CONFIG_ESP_TLS_USING_MBEDTLS=y
#CONFIG_MBEDTLS_DYNAMIC_BUFFER=y
#CONFIG_MBEDTLS_SSL_MAX_CONTENT_LEN=16384

# ===== Wi-Fi =====
#CONFIG_ESP32_WIFI_DYNAMIC_RX_BUFFER_NUM=32
#CONFIG_ESP32_WIFI_DYNAMIC_TX_BUFFER_NUM=32

# ===== Debug =====
CONFIG_HEAP_POISONING_LIGHT=y

#=====Compiler Optimizations === #disable bcz casing problem
CONFIG_COMPILER_OPTIMIZATION_DEBUG=y
CONFIG_COMPILER_OPTIMIZATION_LEVEL_DEBUG=y
CONFIG_COMPILER_OPTIMIZATION_ASSERTIONS_ENABLE=y


# Use built-in factory + OTA partition table
CONFIG_PARTITION_TABLE_CUSTOM=n
CONFIG_PARTITION_TABLE_SINGLE_APP=n
CONFIG_PARTITION_TABLE_TWO_OTA=y
CONFIG_PARTITION_TABLE_APP_SIZE=0x200000